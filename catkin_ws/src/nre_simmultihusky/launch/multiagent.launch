<?xml version="1.0"?>

<!-- 
A launch file for setting up control of a Husky.
-->
<launch>

  <!-- <node name="rqt_console" pkg="rqt_console" type="rqt_console" output="screen" /> -->

<!-- Gazebo -->
<arg name="world_name" default="worlds/empty.world"/>
<include file="$(find gazebo_ros)/launch/empty_world.launch">
 <!-- This is where you select the world to be launched. There is a world directory under nre_simmultihusky folder that contains *.world file and related model folders. One can directly refer to the nre_simmultihusky folder by using (find nre_simmultihusky) as here: value="$(find nre_simmultihusky)/worlds/highbay.world". To access the willogarage world use value="$(find p2os_urdf)/worlds/smart_workspace.world" instead -->
  <arg name="world_name" value="$(find nre_simmultihusky)/worlds/highbay.world"/>
  <arg name="paused" value="false"/>
  <arg name="use_sim_time" value="true"/>
  <arg name="gui" value="true"/>
  <arg name="headless" value="false"/>
  <arg name="debug" value="false"/>  
</include>

<group ns="agent1">
  <include file="$(find nre_simmultihusky)/launch/husky.launch">
    <arg name="namespace" value="agent1" />
    <arg name="initX" value="1.8" />
    <arg name="initY" value="-4.2" />
    <arg name="initYaw" value="0.0" />
  </include>
</group>

<group ns="agent2">
  <include file="$(find nre_simmultihusky)/launch/husky.launch">
    <arg name="namespace" value="agent2" />
    <arg name="initX" value="16.2" />
    <arg name="initY" value="-10.2" />
    <arg name="initYaw" value="0.0" />
  </include>
</group>

<group ns="agent3">
  <include file="$(find nre_simmultihusky)/launch/husky.launch">
    <arg name="namespace" value="agent3" />
    <arg name="initX" value="12.6" />
    <arg name="initY" value="-6.6" />
    <arg name="initYaw" value="0.0" />
  </include>
</group>

